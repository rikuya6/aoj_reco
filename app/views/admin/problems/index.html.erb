<% @page_title = '管理画面：問題一覧' %>

<div class="page-header">
  <h1>問題一覧</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center">ID</th>
        <th class="text-center">volume</th>
        <th class="text-center">コード</th>
        <th class="text-center">タイトル</th>
        <th class="text-center">解いたユーザ数</th>
        <th class="text-center">提出数</th>
        <th class="text-center"></th>
      </tr>
    </thead>
    <tbody>
      <% @problems.each do |problem| %>
      <tr>
        <td class="text-center"><%= problem.id %></td>
        <td class="text-center"><%= problem.volume %></td>
        <td class="text-center"><%= problem.code %></td>
        <td><%= problem.title %></td>
        <td class="text-right"><%= problem.solved_user %></td>
        <td class="text-right"><%= problem.submissions %></td>
        <td>
          <%= link_to '編集', edit_admin_problem_path(problem.id), class: 'btn btn-default btn-xs',
            style: 'width: 5em' %>
          <%= link_to '削除', admin_problem_path(problem.id), method: :delete, class: 'btn btn-xs btn-danger', style: 'width: 5em;', data: { disable_with: '削除中'} %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @problems %>
